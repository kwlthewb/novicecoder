class Rectangle {
    int width, height;
public:
    Rectangle() : width(0), height(0) {};
    Rectangle(int x, int y) : width(x), height(y) {};
    int area() {return width * height; }
    int getWidth() const { return width; }
    int getHeight() const { return height; }
    //friend Rectangle duplicate (const Rectangle&);
};

