#include "pointers.h"

struct A {
	A() : int_ptr_(new int) {}
	~A() {
		std::cout << "Delete pointer" << std::endl;
		delete int_ptr_;
	}
private:
	int* int_ptr_;
};

int main() {
	int* int_ptr2 = new int;
	int* int_ptr;
	int i = 456;
	int_ptr = &i;
	*int_ptr2 = 2;
	std::cout << *int_ptr2 << std::endl;
	i = 999;
	*int_ptr2 = 5;
	std::cout << *int_ptr2 << std::endl;
	delete int_ptr2;
	return 0;
}
