#include "Semaphores.h"

void myfunc1(char *msg) {
	int count = 0;
	while(count < 3) {
		printf("%s sleeping...\n",msg);
		sleepcp(2000);
	}
}

void myfunc2(char *msg) {
	int count = 0;
	while(count < 3) {
		printf("%s sleeping...\n",msg);
		sleepcp(2000);
	}
}

int main() {
	pthread_t t1,t2;
	char *msg1 = "Thread 1";
	char *msg2 = "Thread 2";
	pthread_create(&t1,NULL,(void *)&myfunc1,(void *)msg1);
	pthread_create(&t1,NULL,(void *)&myfunc2,(void *)msg2);

}
