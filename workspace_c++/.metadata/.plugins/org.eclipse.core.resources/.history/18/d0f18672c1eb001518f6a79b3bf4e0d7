#include "pointers.h"

struct A {
	A() : int_ptr_(new int) {}
	~A() {
		std::cout << "Delete pointer" << std::endl;
		//delete int_ptr_;
	}
private:
	//int *int_ptr_;
	boost::scoped_ptr<int> int_ptr_;
};

int main_func() {
	int* int_ptr2 = new int;
	int* int_ptr;
	int i = 456;
	int_ptr = &i;
	*int_ptr2 = 2221212;
	std::cout << *int_ptr2 << std::endl;
	i = 999;
	*int_ptr2 = 99999;
	std::cout << *int_ptr2 << std::endl;
	delete int_ptr2;
	return 0;
}
