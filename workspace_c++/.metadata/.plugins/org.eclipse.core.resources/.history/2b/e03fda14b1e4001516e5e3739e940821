#include "Singleton.h"

dog* Singleton::pd = 0;
cat* Singleton::pc = 0;

dog* Singleton::getDog() {
	if(!pd)
		pd = new dog("Gunner");
	return pd;
}

cat* Singleton::getCat() {
	if(!pc)
		pc = new cat("Smokey");
	return pc;
}

