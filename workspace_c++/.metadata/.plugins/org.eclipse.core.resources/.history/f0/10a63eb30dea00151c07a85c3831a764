#include "Semaphores.h"

void myfunc1(char *msg) {
	int count = 0;
	while(count < 3) {
		printf("%s sleeping...\n",msg);
		sleepcp(2000);
	}
}

void myfunc2(char *msg) {
	int count = 0;
	while(count < 3) {
		printf("%s sleeping...\n",msg);
		sleepcp(2000);
	}
}

int main() {
	pthread_t t1,t2;

	pthread_create(&t1,NULL,(void *)&myfunc1,(void *)"Thread 1");
	pthread_create(&t1,NULL,(void *)&myfunc2,(void *)"Thread 2");
}
