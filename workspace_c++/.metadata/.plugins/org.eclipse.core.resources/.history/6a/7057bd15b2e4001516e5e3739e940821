#include "Singleton.h"

dog* Singleton::pd = 0;
cat* Singleton::pc = 0;

dog* Singleton::getDog() {
	if(!pd) {
		std::cout << "Dog is created." << std::endl;
		pd = new dog("Gunner");
	}
	return pd;
}

cat* Singleton::getCat() {
	if(!pc) {
		std::cout << "Cat is created." << std::endl;
		pc = new cat("Smokey");
	}
	return pc;
}

Singleton::~Singleton() {
	if(pd) {
		delete pd;
		std::cout << "Dog is destroyed." << std::endl;
	}
	if(pc) {
		delete pc;
		std::cout << "Cat is destroyed." << std::endl;
	}
	pd = 0;
	pc = 0;
}

void scope() {
	Singleton s;
	dog* pd = s.getDog();
	pd->bark();
	cat* pc = s.getCat();
	pc->meow();
}

int main() {
	scope();
}
