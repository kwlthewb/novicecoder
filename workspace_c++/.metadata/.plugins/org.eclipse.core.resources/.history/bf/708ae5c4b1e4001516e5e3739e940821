#include "Singleton.h"

dog* Singleton::pd = 0;
cat* Singleton::pc = 0;

dog* Singleton::getDog() {
	if(!pd)
		pd = new dog("Gunner");
	return pd;
}

cat* Singleton::getCat() {
	if(!pc)
		pc = new cat("Smokey");
	return pc;
}

Singleton::~Singleton() {
	if(pd) delete pd;
	if(pc) delete pc;
	pd = 0;
	pc = 0;
}

void scope() {
	dog* pd = Singleton::getDog();
	pd->bark();
	cat* pc = Singleton::getCat();
	pc->meow();
}

int main() {
	scope();
}
